<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <p>
  	<%= f.label :Tunnus%><br />
	<%= f.text_field :name%>
  </p>
  <p>
  	<%= f.label :Opiskelijanumero %><br/>
	<%= f.text_field :student_number %>
  </p>
  <p>
  	<%= f.label :Salasana  %><br />
	<%= f.password_field :password, :live => false %>
  </p>
  <p>
  	<%= f.label :Uudestaan%><br />
	<%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
